#!/usr/bin/env bash

function bootstrap {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  set -x
  pkg ensure lang/ruby23-base
  pkg ensure ruby23-gdbm databases/ruby-gdbm
  pkg ensure ruby23-readline devel/ruby-readline
  gem install bundler
}

bootstrap
